<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMART" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>


    <style name="WrapContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WidthMatchHeightWrapLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidthWrapHeightMatchLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/app_background_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_screen_bg</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/AppFullScreenTheme</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/app_background_blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="StatusBarOnlyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="DashboardActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Text appearances -->
    <style name="TextAppearance.Display2" parent="@style/TextAppearance.AppCompat.Display3">
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonStyleSquared" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/abc_text_size_menu_material</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="ButtonStyleRoundedFilled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="backgroundTint">@color/color_state_material_button</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonStyleBorderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="OnBoardingTitleTextStyle" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="OnBoardingDescriptionTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="lineSpacing">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_variant</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppSmallTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="lineSpacing">2dp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/gray_variant</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

    <style name="FilledBoxEndIconTint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/primary_color</item>
        <item name="boxStrokeColor">@color/gray_variant2</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TopCarCornerStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_top
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_top">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomCarCornerStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay_card_custom_corners_bottom
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_bottom">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>
</resources>